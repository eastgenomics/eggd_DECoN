{
  "name": "DECoN_dev5",
  "title": "DECoN_dev5",
  "summary": "Dx wrapper to run the DeCON CNV caller",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "input_bambis",
      "label": "Bunch of sample.bam AND sample.bai files",
      "class": "array:file",
      "optional": false,
      "patterns": ["*.bam", "*.bai"],
      "help": "Each sample.bam should have a sample.bai file input"
    },
    {
      "name": "target_bed",
      "label": "targeted 1-based BED file",
      "class": "file",
      "optional": false,
      "patterns": ["*.bed"],
      "help": "sorted in chromosome order, no header but tab-separated columns for chrom→start→end→gene"
    },
    {
      "name": "prefix",
      "label": "output prefix",
      "class": "string",
      "optional": false,
      "help": ""
    },
    {
      "name": "exon_num_tsv",
      "label": "exon numbering tsv file for annotation ",
      "class": "file",
      "optional": true,
      "patterns": ["*.tsv", "*.txt"],
      "help": ""
    },
    {
      "name": "min_corr",
      "label": "minimum correlation threshold",
      "class": "float",
      "optional": true,
      "default": 0.98,
      "help": ""
    },
    {
      "name": "min_cov",
      "label": "minimum coverage threshold",
      "class": "int",
      "optional": true,
      "default": 100,
      "help": ""
    },
    {
      "name": "trans_prob",
      "label": "transition probability in HMM",
      "class": "float",
      "optional": true,
      "default": 0.01,
      "help": ""
    },
    {
      "name": "ref_gen",
      "label": "FASTA reference genome",
      "class": "file",
      "optional": true,
      "patterns": ["*.fa", "*.fa.gz"],
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "result_files",
      "label": "2 .RData files, a tsv of CNV calls and a failed samples txt and coverage_plot.pdf if generated",
      "class": "array:file"
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 2
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/DECoN.sh",
    "version": "1"
  },
  "access": {
    "allProjects": "VIEW",
    "project": "CONTRIBUTE",
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:eu-central-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x4"
        }
      }
    }
  }
}
